{
  "name": "craftdesigndisplay",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "api:dev": "npm-run-all --parallel lint:watch test:watch server",
    "start": "npm-run-all --parallel lint:watch test:watch build:dev",
    "build:prod": "npm-run-all clean-dist webpack --config webpack-prod.config.js",
    "test:watch": "npm run test -- --watch",
    "clean": "npm-run-all clean-build clean-dist",
    "lint:watch": "npm run lint -- --watch",
    "prebuild:dev": "npm-run-all clean-build",
    "postbuild:dev": "npm run server",
    "build:dev": "webpack",
    "clean-build": "rimraf ./build && mkdir build",
    "clean-dist": "rimraf ./dist && mkdir dist",
    "lint": "esw ./public/javascript/**/*.js ./test ./routes ./models/",
    "test": "cross-env NODE_ENV=test PORT=4000 && mocha Tests/acceptance",
    "coverage": "cross-env NODE_ENV=test PORT=4000 && istanbul cover _mocha -- Tests/acceptance/section-test.js",
    "server": "nodemon bin/www"
  },
  "dependencies": {
    "angular": "^1.3.10",
    "angular-route": "^1.3.10",
    "bcrypt": "1.0.3",
    "body-parser": "~1.18.2",
    "chai": "^4.1.2",
    "cookie-parser": "~1.4.3",
    "debug": "~2.6.9",
    "ejs": "~2.5.7",
    "express": "~4.15.5",
    "file-system": "^2.2.2",
    "fuzzy": "^0.1.3",
    "lodash": "^4.17.4",
    "mongoose": "^4.13.5",
    "morgan": "~1.9.0",
    "multer": "^1.3.0",
    "serve-favicon": "~2.4.5"
  },
  "devDependencies": {
    "babel-core": "^6.14.0",
    "babel-loader": "^6.4.1",
    "chai-http": "^2.0.1",
    "chai-things": "^0.2.0",
    "clean-webpack-plugin": "^0.1.17",
    "cross-env": "^5.1.1",
    "html-webpack-plugin": "^2.30.1",
    "istanbul": "^0.4.5",
    "mocha": "^3.4.2",
    "nodemon": "^1.12.5",
    "npm-run-all": "^4.1.2",
    "rimraf": "^2.6.2",
    "selenium-webdriver": "3.3.0",
    "webpack": "^1.15.0"
  }
}
