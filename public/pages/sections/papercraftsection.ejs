
<style>


    .col-md-4{
        background-color: white;
        height: 25%;
        box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19);
        border-right: 3px solid red;
    }

    .col-md-8{
        background-color: white;
        height: 25%;
        box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19);

    }

    img{

    }
    .container{
        padding: 5px;

    }

    .footer {
        position: absolute;
        bottom:0;
        width:100%;
        height:100px;   /* Height of the footer */
        background: #282d35;
    }

    .inline{
        display: inline;
        text-align: right;
        float: right;
        margin-top: 50px;
    }

    #btnsDel{
        margin-right: 10px;
        background-color: #00B7FF;
        border: none;
        width: 15%;
        height: 12%;
        text-align: center;
        color: white;

    }
    #btnsUpdate{
        margin-right: 10px;
        background-color: green;
        border: none;
        width: 15%;
        height: 12%;
        text-align: center;
        color: white;
    }

    #btnsUpdate:hover{
        background-color: darkgreen;
    }

    #btnsDel:hover{
        background-color: #3B5998;
    }

</style>

<div ng-controller = "paperCraftSectionController as list">

    <div class="container">

        <h3>All Home Crafts</h3>
        <hr style="border: 1px solid red">
        <p><u><b><i>Displaying </i></b> <i>{{length}} </i> <b><i> {{message}} </i></b></u></p>
    </div>

    <div ng-repeat = "post in posts | orderBy :'-price'" class="container">

        <div class="row">

            <div align="center" class = "col-md-4">

                <img style="padding: 5px" src="/images/Crafts.png" alt="" width="99%" height="99%">

            </div>

            <div align="" class = "col-md-8">

                <h4 style="display: inline-block"><b>{{post.title}}</b></h4>
                <p align="right" style="display: inline-block;"> <b>-</b> {{post.category}}</p>


                <h5>{{post.infoTitle}}</h5>
                <br>
                <p style="height: 20%">{{post.description}} </p>



                <p class="inLine" ><b>Price : â‚¬</b> {{post.price}} </p>
                <button id="btnsDel" ng-click="delete(post._id)"  class="inline">Delete</button>
                <button id="btnsUpdate" ng-click="updatePost(post)" class="inline">Update</button>


            </div>

        </div>

    </div>


</div>


<div class="footer">


</div>



</div>




